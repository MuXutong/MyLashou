<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/top_bg_n"
        android:gravity="center_vertical" >

        <TextView
            android:id="@+id/nearby_title"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:background="@drawable/btn_activate_bg"
            android:gravity="center_vertical"
            android:text="我的"
            android:textColor="@color/white"
            android:textSize="24sp" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

<!--用户未登录-->
            <LinearLayout
                android:id="@+id/layout_no_login"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:gravity="center"
                android:background="@drawable/delivery_address_item_bg"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="你还没有登录哦~"/>
                <Button
                    android:id="@+id/bt_login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#ff2fbe9f"
                    android:layout_marginTop="15dp"
                    android:textColor="@color/white"
                    android:text="马上登录"
                    />
            </LinearLayout>

<!--用户已登录-->
            <LinearLayout
                android:id="@+id/layout_for_logined"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:gravity="center"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:visibility="gone"
                android:background="@drawable/delivery_address_item_bg"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/user_icon"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/my_userName"
                        android:paddingLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="用户名"/>

                    <TextView
                        android:id="@+id/my_userMoney"
                        android:paddingLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="当前账户余额：0元"/>

                </LinearLayout>

                <ImageView
                    android:id="@+id/accout_manager"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/arrow_right_my"/>
            </LinearLayout>

<!-- 三个按钮-->
            <LinearLayout
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:gravity="center"
                android:background="@drawable/delivery_address_item_bg"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:drawableTop="@drawable/ticket"
                    android:text="拉手券"
                    android:textSize="15sp"/>

                <Button
                    android:id="@+id/button3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:drawableTop="@drawable/collection_icon"
                    android:layout_weight="1"
                    android:text="收藏" />


                <Button
                    android:id="@+id/button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:drawableTop="@drawable/recent_view"
                    android:layout_weight="1"
                    android:text="最近浏览" />

            </LinearLayout>

<!-- 四行菜单栏-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:orientation="vertical"
                android:background="@drawable/delivery_address_item_bg"
                android:padding="1dp">

    <!--第1个-->
                <LinearLayout
                    android:padding="1dp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/delivery_address_item_bg"

                    android:orientation="horizontal"
                    android:gravity="center">
                    <ImageView
                        android:layout_marginLeft="10dp"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/unpaied_icon"/>
                    <TextView
                        android:layout_marginLeft="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="center_vertical"
                        android:textSize="15sp"
                        android:text="代付款订单"/>
                    <TextView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:background="@drawable/orange_bg"
                        android:gravity="center"
                        android:textColor="#ffffff"
                        android:textSize="14sp"
                        android:text="2"/>
                    <ImageView
                        android:layout_marginRight="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/arrow_right_my_gray"/>
                </LinearLayout>
    <!--第2个-->
                <LinearLayout
                    android:padding="1dp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/delivery_address_item_bg"
                    android:orientation="horizontal"
                    android:gravity="center">
                    <ImageView
                        android:layout_marginLeft="10dp"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/paied_icon"/>
                    <TextView
                        android:layout_marginLeft="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="center_vertical"
                        android:textSize="15sp"
                        android:text="已付款订单"/>
                    <TextView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:background="@drawable/orange_bg"
                        android:gravity="center"
                        android:textColor="#ffffff"
                        android:textSize="14sp"
                        android:text="2"/>
                    <ImageView
                        android:layout_marginRight="15dp"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/arrow_right_my_gray"/>
                </LinearLayout>
    <!--第3个-->
                <LinearLayout
                    android:padding="1dp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/delivery_address_item_bg"
                    android:orientation="horizontal"
                    android:gravity="center">
                    <ImageView
                        android:layout_marginLeft="10dp"

                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/lottery"/>
                    <TextView
                        android:layout_marginLeft="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="center_vertical"
                        android:textSize="15sp"
                        android:text="抽奖单"/>
                    <TextView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:background="@drawable/orange_bg"
                        android:gravity="center"
                        android:textColor="#ffffff"
                        android:textSize="14sp"
                        android:text="2"/>
                    <ImageView
                        android:layout_marginRight="15dp"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/arrow_right_my_gray"/>
                </LinearLayout>
    <!--第4个-->
                <LinearLayout
                    android:padding="1dp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/delivery_address_item_bg"
                    android:orientation="horizontal"
                    android:gravity="center">
                    <ImageView
                        android:layout_marginLeft="10dp"

                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/coupon"/>
                    <TextView
                        android:layout_marginLeft="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="center_vertical"
                        android:textSize="15sp"
                        android:text="抵用券"/>
                    <TextView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:background="@drawable/orange_bg"
                        android:gravity="center"
                        android:textColor="#ffffff"
                        android:textSize="14sp"
                        android:text="2"/>
                    <ImageView
                        android:layout_marginRight="15dp"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/arrow_right_my_gray"/>
                </LinearLayout>

            </LinearLayout>


        </LinearLayout>



    </ScrollView>
</LinearLayout>